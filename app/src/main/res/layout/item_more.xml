<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trip_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/moreItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:padding="20dp"
                android:background="@drawable/bg_round_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fuel Reeport"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/robotocondensed_bold"/>
                    <TextView
                        android:id="@+id/infoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This month: 350L"
                        android:textSize="12dp"
                        android:textColor="@color/more_asset_info"
                        android:fontFamily="@font/robotocondensed_light"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/bodyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is contents"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/robotocondensed_light"
                    android:layout_marginTop="5dp"
                    android:maxLines="3"
                    android:ellipsize="end"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="@dimen/more_circle_radius"
            android:layout_height="@dimen/more_circle_radius"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:elevation="10dp">
            <TextView
                android:id="@+id/seqTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="10dp"
                android:textColor="#000000"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

