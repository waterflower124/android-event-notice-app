<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/titlebar_background</item>
        <item name="colorPrimaryDark">@color/statusbar_background</item>
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:navigationBarColor">@android:color/black</item>

    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="popup_style" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:itemPadding">25dp</item>

    </style>

</resources>
